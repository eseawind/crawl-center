<?xml version="1.0" encoding="UTF-8"?>
<Root>
	<Database>
		<DB>
			<DriverClass>com.mysql.jdbc.Driver</DriverClass>
			<ConnectionStr>jdbc:mysql://localhost:3306/crawl-center?characterEncoding=UTF8</ConnectionStr>
			<Username>root</Username>
			<Password>root</Password>
		</DB>
		<MongoDB>
			<Ip>localhost</Ip>
			<Port>27001</Port>
			<Username>${Maven.MongoDB.Username}</Username>
			<Password>${Maven.MongoDB.Password}</Password>
			<DatabaseName>crawl-center</DatabaseName>
			<AdminDatabaseName>admin</AdminDatabaseName>
		</MongoDB>
	</Database>

	<Executor>
		<NumThreads>200</NumThreads>
		<MaxQueueSize>200</MaxQueueSize>
	</Executor>

	<Crawl>
		<SleepingTime>10000</SleepingTime>
	</Crawl>

	<Collector>
		<BackupEndName>.bak</BackupEndName>
		<Threshold>1</Threshold>
	</Collector>

	<Log>
		<ShowResponseObject>
			<Enabled>true</Enabled>
		</ShowResponseObject>
		<Machine>localhost</Machine>
	</Log>

	<IsTestEnvironment>false</IsTestEnvironment>
</Root>